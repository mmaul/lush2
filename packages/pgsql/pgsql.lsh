;;    Most data types do not use modifiers, in which case the value is always -1.}
(defun fmod (pgresult col)
  (declare (-gptr- "PGresult *") pgresult)
  (declare (-int-) col)
  (let ((ret 0))
    (declare (-int-) ret)
    #{ $ret=PQfmod($pgresult,$col); #}
    ret))        
           


